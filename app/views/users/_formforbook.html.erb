<% user = current_user if user.nil? %>
<h2 class>User info</h2>
  <div class="profile-container">
    <table class="table">
      <tr>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
      </tr>
    </table>
    <div class="row">
      <%= link_to "", edit_user_path(@book.user_id), class: "fas fa-user-cog btn btn-outline-secondary btn-block" %>
    </div>
  </div>