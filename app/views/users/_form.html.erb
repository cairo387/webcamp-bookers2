<h2>User info</h2>
  <div class="profile-container">
    <table class="table">
      <tr>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user.following_user.count,  user_following_path(user.id) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.follower_user.count, user_follower_path(user.id) %></th>
      </tr>
    </table>
    <div class="row">
      <%= link_to '', edit_user_path(user), class: "fas fa-user-cog btn btn-outline-secondary btn-block" %>
    </div>
  </div>