<div class="container">
  <div class="row">
    <div class="px-2 mt-3">
      <h2>Sign up</h2>
      <%= form_with model:@user, url: user_registration_path,id: 'new_user', class: 'new_user', local:true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mb-2">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field mb-2">
          <%= f.label :postal_code %><br />
          <%= f.text_field :postal_code, autocomplete: "postal_code" %>
        </div>
        <div class="field mb-2">
          <%= f.label :prefecture_code %><br />
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' } %>
        </div>
        <div class="field mb-2">
          <%= f.label :address_city %><br />
          <%= f.text_field :address_city, autocomplete: "address_city" %>
        </div>
        <div class="field mb-">
         <%= f.label :address_street %><br />
         <%= f.text_field :address_street, autocomplete: "address_street" %>
        </div>
        <div class="field mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions mb-2">
          <%= f.submit "Sign up", class: "btn btn-success btn-sm" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>